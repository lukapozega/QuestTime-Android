<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="250dp"
    android:layout_height="wrap_content"
    android:background="@drawable/popup_background"
    >

    <EditText
        android:id="@+id/searchEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Room name"
        android:fontFamily="@font/roboto_black"
        android:layout_marginTop="20dp"
        android:layout_marginStart="36dp"
        android:layout_marginEnd="36dp"
        />

    <LinearLayout
        android:layout_below="@id/searchEditText"
        android:layout_width="match_parent"
        android:layout_height="26dp"
        android:id="@+id/cat_1"
        android:paddingRight="36dp"
        android:paddingLeft="36dp"
        android:layout_marginTop="20dp">

        <ImageView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:alpha="0.4"
            android:src="@drawable/animals"
            android:tag="Animals"/>
        <ImageView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:alpha="0.4"
            android:src="@drawable/art"
            android:tag="Art"/>
        <ImageView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:alpha="0.4"
            android:src="@drawable/celebrities"
            android:tag="Celebrities"/>
        <ImageView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:alpha="0.4"
            android:src="@drawable/entertainment"
            android:tag="Entertainment"/>


    </LinearLayout>

    <LinearLayout
        android:layout_below="@id/cat_1"
        android:layout_width="match_parent"
        android:layout_height="26dp"
        android:id="@+id/cat_2"
        android:paddingRight="36dp"
        android:paddingLeft="36dp"
        android:layout_marginTop="20dp">

        <ImageView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:alpha="0.4"
            android:src="@drawable/general"
            android:tag="General Knowledge"/>

        <ImageView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:alpha="0.4"
            android:src="@drawable/geography"
            android:tag="Geography"/>
        <ImageView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:alpha="0.4"
            android:src="@drawable/history"
            android:tag="History"/>
        <ImageView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:alpha="0.4"
            android:src="@drawable/mythology"
            android:tag="Mythology"/>

    </LinearLayout>

    <LinearLayout
        android:layout_below="@id/cat_2"
        android:layout_width="match_parent"
        android:layout_height="26dp"
        android:id="@+id/cat_3"
        android:paddingRight="36dp"
        android:paddingLeft="36dp"
        android:layout_marginTop="20dp">

        <ImageView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:alpha="0.4"
            android:src="@drawable/politics"
            android:tag="Politics"/>

        <ImageView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:alpha="0.4"
            android:src="@drawable/science"
            android:tag="Science"/>

        <ImageView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:alpha="0.4"
            android:src="@drawable/sports"
            android:tag="Sports"/>

        <ImageView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:alpha="0.4"
            android:src="@drawable/vehicles"
            android:tag="Vehicles"/>

    </LinearLayout>

    <TextView
        android:id="@+id/search_category_names"
        android:layout_below="@id/cat_3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@android:color/black"
        android:gravity="center"
        android:layout_marginTop="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:hint="@string/no_categories_selected"
        />

    <Button
        android:id="@+id/searchBtn"
        android:layout_below="@id/search_category_names"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        style="@style/Widget.AppCompat.Button.Borderless.Colored"
        android:text="Search"
        android:textAllCaps="false"
        android:textColor="@android:color/black"
        android:textStyle="bold"
        android:fontFamily="@font/roboto_black"
        android:padding="20dp"
        android:textSize="20sp"
        />

</RelativeLayout>