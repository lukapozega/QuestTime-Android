<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="74dp"
    android:background="@drawable/list_item"
    android:paddingTop="0dp"
    android:paddingLeft="18dp"
    android:paddingBottom="0dp"
    android:clipToPadding="true"
    android:clipChildren="true"
    >

    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="2"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="6dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:orientation="vertical">

            <TextView
                android:id="@+id/roomNameText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/room_name"
                android:fontFamily="@font/roboto_black"
                android:textSize="18sp"
                android:singleLine="true"
                android:layout_marginEnd="8dp"
                />

            <ImageView
                android:id="@+id/underline"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@drawable/room_underline"
                android:layout_marginEnd="8dp"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:layout_marginTop="0dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/difficulty"
                android:layout_marginEnd="4dp"
                android:fontFamily="@font/roboto_black"
                android:textSize="12sp"
                android:layout_gravity="center"/>

            <ImageView
                android:id="@+id/difficulty_icon"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@drawable/circle_green"
                android:adjustViewBounds="true"
                android:layout_marginEnd="24dp"
                android:layout_marginTop="1dp"
                android:padding="4dp"/>

            <TextView
                android:id="@+id/numberOfUsers"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="@string/people"
                android:fontFamily="@font/roboto_black"
                android:textSize="12sp"
                android:gravity="center"/>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/category_layout"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:layout_marginEnd="5dp">

        <ImageView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/art"
            android:layout_margin="4dp"
            android:alpha="0.7"/>
        <ImageView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/art"
            android:layout_margin="4dp"
            android:alpha="0.7"/>
        <ImageView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/art"
            android:layout_margin="4dp"
            android:alpha="0.7"/>

    </LinearLayout>

    <Button
        android:id="@+id/joinBtn"
        android:layout_width="50dp"
        android:layout_height="match_parent"
        android:background="@drawable/rounded_join_button"
        android:backgroundTint="#ebc862"
        android:text="Join"
        android:textAllCaps="false"
        android:textColor="@android:color/white"
        android:textStyle="bold"
        android:fontFamily="@font/roboto_black"
        />

</LinearLayout>